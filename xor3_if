module xor3_if(
    input a,
    input b,
    input c,
    output y
    );
    
    reg y;
    
    always@(a, b, c) begin
    if(a==0 & b==0 & c==0) y=0;
    else if(a==0 & b==0 & c==1) y=1;
    else if(a==0 & b==1 & c==0) y=1;
    else if(a==0 & b==1 & c==1) y=0;
    else if(a==1 & b==0 & c==0) y=1;
    else if(a==1 & b==0 & c==1) y=0;
    else if(a==1 & b==1 & c==0) y=0;
    else if(a==1 & b==1 & c==1) y=1;
    end 
    
endmodule
