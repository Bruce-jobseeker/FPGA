module tb_add_4b(

    );
    
    reg [3:0] a, b;
    reg cin;
    wire [3:0] sum;
    wire cout;
    
    add_Nb U0 (a, b, cin, sum, cout);
    
    initial begin
    a=4'b1000; b=4'b1000; cin=1'b0;
    #10 a=4'b0001; b=4'b0001;
    #10 a=4'b1010; b=4'b0111;
    #10 a=4'b0011; b=4'b1100;
    #10 a=4'b0101; b=4'b1111;
    #20 $finish;
    end
    
endmodule
